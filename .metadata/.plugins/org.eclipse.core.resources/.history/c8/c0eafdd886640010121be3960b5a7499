uint8_t system_locked = 0;

void HAL_TIM_PeriodElapsedCallback(TIM_HandleTypeDef *htim) {

	if (htim->Instance == TIM2) {
		system_locked = 0;
	}

	HAL_TIM_Base_Stop_IT(&htim2);  // Timer'Ä± durdur
}

